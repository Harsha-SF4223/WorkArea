<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts"
             xmlns:core="clr-namespace:Syncfusion.Maui.Themes;assembly=Syncfusion.Maui.Core"
             x:Class="Syncfusion.Maui.Charts.SfChartCommonStyle">
    
    <!--Tooltip-->
    <Style TargetType="chart:ChartTooltipBehavior">
        <Setter Property="Background" Value="{DynamicResource SfChartTooltipBackground}"/>
        <Setter Property="TextColor" Value="{DynamicResource SfChartTooltipTextColor}"/>
        <Setter Property="FontSize" Value="{DynamicResource SfChartTooltipTextFontSize}"/>
    </Style>

</ResourceDictionary>
